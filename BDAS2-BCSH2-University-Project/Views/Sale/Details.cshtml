@model Models.Models.Sale

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@ViewData["Title"]</h4>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @TempData["Error"]
        </div>
    }
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice) Kč
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Payment.DisplayInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Payment.DisplayInfo)
        </dd>
    </dl>
</div>
<div>
    <div class="button-row">
        @if (User.IsInRole(UserRole.Admin.ToStringValue()))
        {
            <a asp-action="Save" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        }
    </div>
    <div style="margin-top: 10px;">
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
    </div>
</div>
