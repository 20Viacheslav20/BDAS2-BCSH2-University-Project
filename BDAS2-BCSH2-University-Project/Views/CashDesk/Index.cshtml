@model IEnumerable<CashDesk>

@{
    ViewData["Title"] = "Cash desks";
}

<h1>@ViewData["Title"]</h1>
@if (User.IsInRole(UserRole.Admin.ToStringValue()))
{
    <p>
        <a asp-action="Save" class="btn btn-success">Create</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSelf)
            </th>
            <th>
                Shop contact tel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSelf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shop.Contact)
                </td>
                <td>
                    @if (User.IsInRole(UserRole.Admin.ToStringValue()))
                    {
                        <a asp-action="Save" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a>|</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
