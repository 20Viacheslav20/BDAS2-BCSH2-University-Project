@model Stand

@{
    if (Model.Id == 0)
        ViewData["Title"] = "Create";
    else
        ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountOfShelves" class="control-label"></label>
                <input asp-for="CountOfShelves" class="form-control" />
                <span asp-validation-for="CountOfShelves" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShopId" class="control-label">Shop</label>
                <select asp-for="ShopId" asp-items="@ViewBag.Shops" class="form-control">
                </select>
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
</div>




